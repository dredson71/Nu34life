
@model IEnumerable<Nu34life.Models.Allergy>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Paciente</h2>
<p>
    @Html.ActionLink("Crear Alergia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Description 
        </th>
        <th>
           Ingrediente
        </th>
        <th>
            Paciente
        </th>



        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Name)
            </td>
         


     
        </tr>
    }
</table>
@section scripts{
    <script>
        $(".nElimina").click(function (event) {
            if (confirm('Estas seguro de eliminar?') == false) {
                event.preventDefault();
            }
        });</script>
}
