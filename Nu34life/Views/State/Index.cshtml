
@model IEnumerable<Nu34life.Models.State>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["Email"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Crear Estado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Description
        </th>
        <th>
            Height
        </th>
        <th>
            Weight
        </th>
        <th>
            Generated Day
        </th>
        <th>
            Expiration Day
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weighr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Generated_day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Expiration)
        </td>

        <td>
            @Html.ActionLink("Insertar Plan", "SearchPlan")
        </td>
    </tr>
    }
</table>
@section scripts{
    <script>$(".nElimina").click(function (event) {
            if (confirm('Estas seguro de eliminar?') == false){
                event.preventDefault();
            }
        });</script>
}