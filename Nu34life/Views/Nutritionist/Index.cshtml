@model IEnumerable<Nu34life.Models.Nutritionist>

@{
    ViewBag.Title = "Lista de Nutricionistas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nutricionista", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Fecha de cumpleaños
        </th>
        <th>
            Correo
        </th>
        <th>
            Contraseña
        </th>
        <th>
            Validar
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Validate)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new {@class = "nElimina" })
        </td>
    </tr>
}

</table>

@section scripts{
    
    <script>
        $(".nElimina").click(function (event) {
            if (confirm('Estas seguro de eliminar?') == false){
                event.preventDefault();
            }
        });
        
    </script>
    
 }
